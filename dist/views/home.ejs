<h3>Create new</h3>
<div class="creationParent">
    <div class="creation">
        <div>
            <h3>Create a QR code</h3>
            <div id="tooltip">Scannable code with tracking</div>
        </div>
        <label for="creationUrl">Name of code</label>
        <input
            type="text"
            name="creationName"
            placeholder="My favorite playlist..."
            id="creationName"
            autocomplete="off"
            maxlength="20"
        />
        <label for="creationUrl">Redirect-url</label>
        <input
            type="url"
            name="creationUrl"
            placeholder="https://..."
            id="creationUrl"
            autocomplete="off"
        />
        <div class="center">
            <button id="creationSubmit">Create QR code</button>
        </div>
        <div class="messageDiv">
            <span id="message"></span>
        </div>
    </div>

    <div class="createalink">
        <div>
            <h3>Create a new link</h3>
            <div id="tooltip">https://quality.codes/link/fp2arT</div>
        </div>

        <label for="creationUrl">Name of link</label>
        <input
            type="text"
            name="creationName"
            placeholder="My favorite playlist..."
            id="creationNameLink"
            autocomplete="off"
            maxlength="20"
        />
        <label for="creationUrl">Redirect-url</label>
        <input
            type="url"
            name="creationUrl"
            placeholder="https://..."
            id="creationUrlLink"
            autocomplete="off"
        />
        <div class="center">
            <button id="creationSubmitLink">Create trackable link</button>
        </div>

        <div class="messageDiv">
            <span id="messageLink"></span>
        </div>
    </div>
</div>

<div class="codes">
    <h3>My Codes</h3>
    <div id="codesList"></div>
</div>

<script src="/dist/scripts/frontend/home.js" type="module"></script>
